{
	"name": "puppeteer-server",
	"version": "1.5.0",
	"description": "Servidor MCP personalizado para automatizaciÃ³n de navegadores usando Puppeteer",
	"license": "MIT",
	"type": "module",
	"bin": {
		"puppeteer-server": "dist/index.js"
	},
	"main": "dist/index.js",
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsc && chmod +x dist/*.js",
		"dev": "tsc --watch",
		"start": "node dist/index.js",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "eslint src --ext .ts --fix",
		"lint:check": "eslint src --ext .ts",
		"format": "prettier --write \"src/**/*.{ts,js,json}\"",
		"format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
		"prepare": "pnpm run build && husky install",
		"prepublishOnly": "pnpm run build && pnpm run test",
		"release": "semantic-release"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.0.1",
		"puppeteer": "^23.4.0"
	},
	"devDependencies": {
		"@types/node": "^22.0.0",
		"typescript": "^5.6.2",
		"husky": "^9.0.11",
		"semantic-release": "^24.0.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"eslint": "^8.57.0",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"eslint-config-prettier": "^9.1.0",
		"prettier": "^3.3.3",
		"jest": "^29.7.0",
		"@types/jest": "^29.5.12",
		"ts-jest": "^29.2.5"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"puppeteer",
		"browser-automation",
		"web-scraping"
	],
	"author": "TecnoManu",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tecnomanu/puppeteer-server.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
