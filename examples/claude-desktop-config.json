{
	"mcpServers": {
		"puppeteer-server-local": {
			"command": "/opt/homebrew/bin/node",
			"args": [
				"RUTA_ABSOLUTA_A_TU_PROYECTO/puppeteer-server/dist/index.js"
			],
			"env": {
				"ALLOWED_ORIGINS": "https://github.com,https://*.github.io,https://docs.anthropic.com,https://claude.ai",
				"MAX_SCREENSHOT_SIZE": "2097152",
				"MAX_CONTENT_LENGTH": "1048576",
				"TOOL_TIMEOUT": "30000",
				"ALLOW_DANGEROUS": "false",
				"NODE_ENV": "development",
				"PUPPETEER_LAUNCH_OPTIONS": "{ \"headless\": false, \"defaultViewport\": { \"width\": 1920, \"height\": 1080 } }"
			}
		}
	}
}
