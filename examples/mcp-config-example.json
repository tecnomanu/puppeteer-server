{
	"mcpServers": {
		"puppeteer-server": {
			"command": "npx",
			"args": ["-y", "puppeteer-server"],
			"env": {
				"PUPPETEER_LAUNCH_OPTIONS": "{ \"headless\": false, \"defaultViewport\": { \"width\": 1280, \"height\": 720 } }",
				"ALLOWED_ORIGINS": "*",
				"ALLOW_DANGEROUS": "false",
				"MAX_SCREENSHOT_SIZE": "2097152",
				"TOOL_TIMEOUT": "30000"
			}
		}
	}
}
